extends layout 
block content 
    h1 Edit your blog
    form(action="/blogs/" + blog._id + '/edit' method="POST")
        p
        label(for="title") Title:
        br
        input(type="text" name="title" placeholder=blog.title value=blog.title required)
        p
        label(for="Content") Content:
        br
        textarea(name="content" placeholder=blog.content value=blog.content required) 
        p
        input(type="submit" value="Submit")
    